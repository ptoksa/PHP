{% extends 'base.html.twig' %}

{% block title %}User Index{% endblock %}

{% block body %}
<div class="container">
    <h1>User Index</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.email }}</td>
                <td class="action-links">
                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="edit">Show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="edit">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}" class="create-new">Create New</a>
</div>
{% endblock %}
